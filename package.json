{
    "name": "bandwidth-throttle-stream",
    "version": "0.2.0",
    "description": "A Node.js and Deno transform stream for throttling bandwidth",
    "author": "KunkaLabs Limited",
    "private": false,
    "license": "Apache-2.0",
    "main": "./dist/node/index.js",
    "types": "./dist/node/index.d.ts",
    "files": [
        "dist/node"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/patrickkunka/bandwidth-throttle-stream/"
    },
    "scripts": {
        "test": "TS_NODE_PROJECT=./config/typescript/tsconfig.base.json mocha \"**/*.test.ts\" --config ./config/mocha/.mocharc.json",
        "test:watch": "npm run test -- --watch",
        "test:cover": "nyc npm run test",
        "clean:dist": "rm -rf dist",
        "build:node": "ttsc -p ./config/typescript/tsconfig.build.node.json",
        "build:deno": "ttsc -p ./config/typescript/tsconfig.build.deno.json",
        "build": "npm run clean:dist npm run build:node && npm run build:deno",
        "lint": "tslint --project tsconfig.json -c ./config/tslint/tslint.json \"./src/**/*.ts\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run test"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write --config ./config/prettier/.prettierrc",
            "git add"
        ],
        "*.scss": [
            "prettier --write --config ./config/prettier/.prettierrc",
            "stylelint --config './config/stylelint/.stylelintrc.json' --fix",
            "git add"
        ]
    },
    "nyc": {
        "extends": "./config/nyc/.nycrc.json"
    },
    "devDependencies": {
        "@types/chai": "4.2.2",
        "@types/mocha": "2.2.48",
        "@types/node": "12.6.8",
        "@types/sinon": "9.0.4",
        "@zerollup/ts-transform-paths": "^1.7.17",
        "chai": "4.2.0",
        "husky": "3.0.2",
        "lint-staged": "9.2.1",
        "mocha": "^7.1.1",
        "nyc": "^15.0.0",
        "prettier": "1.19.1",
        "sinon": "9.0.2",
        "ts-node": "8.3.0",
        "tsc-watch": "2.4.0",
        "tsconfig-paths": "^3.9.0",
        "tslint": "5.20.1",
        "tslint-eslint-rules": "5.4.0",
        "ttypescript": "^1.5.10",
        "typescript": "3.7.4"
    }
}
