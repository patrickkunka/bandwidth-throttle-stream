{
    "compilerOptions": {
        "lib": ["es2015", "es2017", "dom"],
        "target": "ES2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "@Platform": ["../../src/Platform/index"]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ]
    },
}
